<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5sp"
    android:paddingRight="5sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/btn_themnhomhang_quanly_qlnh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:text="Thêm mới"
            android:textSize="24sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_field_manh_item_quanly_qlnh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="5"
            android:gravity="fill_vertical"
            android:text="Mã nhóm hàng"
            android:textSize="@dimen/field_textsize_quanly_qlnv"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_field_tennh_item_quanly_qlnh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="6"
            android:gravity="center_vertical"
            android:text="Tên nhóm hàng"
            android:textSize="@dimen/field_textsize_quanly_qlnv"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/field_ibtn_xoanh_item_quanly_qlnh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text=""
            android:textSize="@dimen/field_textsize_quanly_qlnv" />
    </LinearLayout>

    <ListView
        android:id="@+id/lv_nhomhang_quanly_qlnh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>