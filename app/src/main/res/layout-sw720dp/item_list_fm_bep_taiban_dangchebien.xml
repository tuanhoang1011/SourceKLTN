<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingLeft="5sp"
    android:paddingRight="5sp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_idhd_item_taiban_dangchebien"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/item_textsize_idhd_bep" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_tenmonan_item_taiban_dangchebien"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:text="TextView"
                android:textSize="@dimen/item_textsize_tenmon_bep"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_soluong_item_taiban_dangchebien"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="TextView"
                android:textSize="@dimen/item_textsize_tenmon_bep"
                android:textStyle="bold"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_ghichu_item_taiban_dangchebien"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/item_textsize_ghichu_bep"
            android:paddingLeft="@dimen/item_padding_ghichu_bep"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">

        <ImageButton
            android:id="@+id/ibtn_hoanthanhmonan_item_taiban_dangchebien"
            android:layout_width="76sp"
            android:layout_height="76sp"
            android:layout_weight="1"
            app:srcCompat="@drawable/icon_hoanthanhmonan" />
        <ImageButton
            android:id="@+id/ibtn_tamngungphucvu_item_taiban_dangchebien"
            android:layout_width="76sp"
            android:layout_height="76sp"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_delete" />
    </LinearLayout>
</LinearLayout>