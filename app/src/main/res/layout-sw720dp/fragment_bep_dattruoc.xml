<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_field_madatruoc_item_dattruoc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="Mã đặt trước" />

        <TextView
            android:id="@+id/tv_field_thoigiannhanban_item_dattruoc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Thời gian nhận bàn" />

        <TextView
            android:id="@+id/tv_field_soban_item_dattruoc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Số bàn" />

        <TextView
            android:id="@+id/tv_field_songuoi_item_dattruoc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Số người" />
    </LinearLayout>

    <ListView
        android:id="@+id/lv_ctdattruoc_dattruoc"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>