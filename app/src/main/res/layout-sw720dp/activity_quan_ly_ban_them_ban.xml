<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="500sp"
    android:layout_height="200sp"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10sp"
    tools:context=".quanly.quanlyban.QuanLyBanThemBan">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_field_maban_qlban_themban"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mã bàn"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/edt_maban_quanly_qlban_thembanact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_okthemban_quanly_qlban_themban"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Thêm bàn"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn_huythemban_quanly_qlban_themban"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hủy"
            android:textSize="24sp" />
    </LinearLayout>

</LinearLayout>