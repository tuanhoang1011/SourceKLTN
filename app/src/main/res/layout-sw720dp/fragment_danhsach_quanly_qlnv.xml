<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5sp"
    android:paddingRight="5sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_field_manv_item_quanly_qlnv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="4"
            android:gravity="fill_vertical"
            android:text="Mã NV"
            android:textSize="@dimen/field_textsize_quanly_qlnv"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_field_tennv_item_quanly_qlnv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:text="Tên nhân viên"
            android:textStyle="bold"
            android:textSize="@dimen/field_textsize_quanly_qlnv"/>

        <TextView
            android:id="@+id/tv_field_chucvu_item_quanly_qlnv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:text="Chức vụ"
            android:textStyle="bold"
            android:textSize="@dimen/field_textsize_quanly_qlnv"/>

        <TextView
            android:id="@+id/field_img_iconisdangnhap_item_quanly_qlnv"
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Online"
            android:textStyle="bold"
            android:textSize="@dimen/field_textsize_quanly_qlnv"/>

        <TextView
            android:id="@+id/field_ibtn_xoanv_item_quanly_qlnv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text=""
            android:textSize="@dimen/field_textsize_quanly_qlnv"/>
    </LinearLayout>

    <ListView
        android:id="@+id/lv_nhanvien_quanly_qlnv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>